.modal-header
  %h3.modal-title
    %span{ 'ng-if' => '!copy.id' }
      Create Area
    %span{ 'ng-if' => 'copy.id' }
      Edit Area

.modal-body
  %form{ name: 'form', 'ng-submit' => 'submit()' }
    %area{ area: 'copy' }
  {{ copy }}
.modal-footer
  %button.btn.btn-primary.pull-right{ 'ng-click' => 'submit()', 'ng-disabled' => 'form.$invalid' }
    %span
    %span{ 'ng-if' => '!copy.id' }
      Create
    %span{ 'ng-if' => 'copy.id' }
      Update
