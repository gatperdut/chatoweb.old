.modal-header
  %h3.modal-title
    Create a Craft

.modal-body
  %form{ name: 'form' }
    %craft{ 'model' => 'model' }

.modal-footer
  %button.btn.btn-primary.pull-right{ 'ng-click' => 'submit()', 'ng-disabled' => 'form.$invalid || !CraftStepUtilsService.filter(model.craft_steps).length' }
    %span{ 'ng-if' => 'model.id' }
      Update
    %span{ 'ng-if' => '!model.id' }
      Create
  %button.btn.btn-default.pull-left{ 'ng-click' => 'close()' }
    Close
