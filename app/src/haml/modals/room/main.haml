.modal-header
  %h3.modal-title
    Room

.modal-body
  %form{ name: 'form', 'ng-submit' => 'submit()' }

    .form-group
      %label
        Title:
      %input.form-control{ type: 'text', required: true, 'ng-model' => 'room.title' }

    .form-group
      %label
        Description:
      %textarea.form-control{ type: 'text', rows: '5', 'ng-model' => 'room.description', required: true }

    {{ room }}

.modal-footer
  %button.btn.btn-primary.pull-right{ 'ng-click' => 'submit()', 'ng-disabled' => 'form.$invalid' }
    %span{ 'ng-if' => 'room.id' }
      Update
    %span{ 'ng-if' => '!room.id' }
      Create
