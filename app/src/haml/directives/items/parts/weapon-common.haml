%div

  .form-group
    %label
      Grip is
    %span.label.label-primary
      {{ model.weapon_stat.grip }}

  .form-group
    %label
      Base is
    %span.label.label-primary
      {{ model.weapon_stat.base }}

  .form-group
    %label
      Roll modifier is
    %span.label{ 'ng-class' => "{ 'label-primary': !model.weapon_stat.roll_mod, 'label-danger': model.weapon_stat.roll_mod < 0, 'label-success': model.weapon_stat.roll_mod > 0 }" }
      {{ model.weapon_stat.roll_mod}}

  .form-group
    %label
      Critical modifier is
    %span.label{ 'ng-class' => "{ 'label-primary': !model.weapon_stat.critical_mod, 'label-danger': model.weapon_stat.critical_mod < 0, 'label-success': model.weapon_stat.critical_mod > 0 }" }
      {{ model.weapon_stat.critical_mod}}